{
  "schemaVersion": 1,
  "id": "chromaconcrete",
  "version": "${version}",

  "name": "Chroma Blocks",
  "description": "Creates blocks that can be colored to many hues with dyes.",
  "authors": [
    "ColdLavaLamp"
  ],

  "license": "LGPL-3.0",
  "icon": "assets/chromaconcrete/ChromaConcreteIcon.png",

  "environment": "*",
  "accessWidener" : "chromaconcrete.accesswidener",
  "entrypoints": {
    "main": [
      "easton.chromaconcrete.ChromaConcrete"
    ],
    "client": [
      "easton.chromaconcrete.ClientConcrete"
    ]
  },
  "mixins": [
    "chromaconcrete.mixins.json"
  ],

  "depends": {
    "minecraft": ">=1.21.1",
    "fabricloader": ">=0.15.11",
    "fabric": "*",
    "java": ">=17"
  }
}
